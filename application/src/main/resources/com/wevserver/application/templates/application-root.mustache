<!DOCTYPE html>
<html>
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section content">
            <h2 class="title is-2">Favourites</h2>
            <div class="block buttons">
                {{#features}}
                <div class="buttons has-addons">
                    <a class="button is-dark" href="{{path}}">{{text}}</a>
                    <form method="post">
                        <input hidden="hidden" name="uri" value="{{path}}" />
                        <input hidden="hidden" name="redirectUri" value="/" />
                        {{#favourite}}
                        <button
                            type="submit"
                            formaction="/session/favourite-uri-delete"
                            class="button"
                        >
                            <span class="icon">
                                <i class="fa-solid fa-bookmark"></i>
                            </span>
                        </button>
                        {{/favourite}} {{^favourite}}
                        <button
                            type="submit"
                            formaction="/session/favourite-uri-create"
                            class="button"
                        >
                            <span class="icon">
                                <i class="fa-regular fa-bookmark"></i>
                            </span>
                        </button>
                        {{/favourite}}
                    </form>
                </div>
                {{/features}}
                <i></i>
            </div>
        </section>
        <section class="section content">
            <h2 class="title is-2">Modules</h2>
            <div class="buttons">
                {{#modules}}
                <a class="button is-dark" href="#{{.}}">{{.}}</a>
                {{/modules}}
                <i></i>
            </div>
        </section>
        <section class="section content">
            {{#moduleFeatures}}
            <h2 class="title is-2" id="{{name}}">
                <span>{{name}}</span>
                <a
                    class="is-size-4 has-text-grey"
                    href="/application/module-configuration-update/{{name}}"
                >
                    <i class="fa-solid fa-gear"></i>
                </a>
            </h2>
            <div class="block buttons">
                {{#features}}
                <div class="buttons has-addons">
                    <button class="button">
                        <span class="icon">
                            <i class="fa-solid fa-plus"></i>
                        </span>
                    </button>
                    <a class="button is-dark" href="{{path}}"
                        >{{text}} {{#counter}}
                        <span class="tag is-white mx-1"> {{counter}} </span>
                        {{/counter}}
                    </a>
                    <form method="post">
                        <input hidden="hidden" name="uri" value="{{path}}" />
                        <input hidden="hidden" name="redirectUri" value="/" />
                        {{#favourite}}
                        <button
                            type="submit"
                            formaction="/session/favourite-uri-delete"
                            class="button"
                        >
                            <span class="icon">
                                <i class="fa-solid fa-bookmark"></i>
                            </span>
                        </button>
                        {{/favourite}} {{^favourite}}
                        <button
                            type="submit"
                            formaction="/session/favourite-uri-create"
                            class="button"
                        >
                            <span class="icon">
                                <i class="fa-regular fa-bookmark"></i>
                            </span>
                        </button>
                        {{/favourite}}
                    </form>
                </div>
                {{/features}}
                <i></i>
            </div>
            {{/moduleFeatures}}
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
