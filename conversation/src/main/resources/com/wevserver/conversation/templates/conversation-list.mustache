<!DOCTYPE html>
<html lang="en">
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section content">
            <form action="/conversation/conversation-list">
                <div class="field">
                    <label class="label">Id Equals</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="idEquals"
                            placeholder="Id Equals"
                        />
                    </div>
                </div>

                <div class="field">
                    <label class="label">Name Starting With</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="nameStartingWith"
                            placeholder="Name Starting With"
                        />
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <div class="select">
                            <select name="sortBy">
                                <option
                                    disabled="disabled"
                                    selected="selected"
                                    value="value"
                                >
                                    Sort By
                                </option>
                                <option>UPDATED_AT_ASC</option>
                                <option>UPDATED_AT_DESC</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button">Find</button>
                    </div>
                </div>
            </form>
        </section>
        <section class="section content">
            {{#conversationPage.content}}
            <div class="box">
                <div class="block">
                    <span class="tag">{{updatedAt}}</span>
                </div>
                <div class="block">
                    <a
                        class="button is-responsive"
                        href="/conversation/conversation-read?id={{id}}"
                        >{{id}}</a
                    >
                </div>
                <div class="block">
                    <p>{{name}}</p>
                </div>
            </div>
            {{/conversationPage.content}}
        </section>
        <section class="section content">
            <nav
                class="pagination is-centered"
                role="navigation"
                aria-label="pagination"
            >
                <ul class="pagination-list">
                    <li>
                        <form action="/conversation-list">
                            <input type="hidden" name="id" />
                            <input type="hidden" name="name" />
                            <input type="hidden" name="page" />
                            <button
                                class="pagination-link"
                                aria-label="Next Page"
                                type="submit"
                            >
                                Next Page
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
