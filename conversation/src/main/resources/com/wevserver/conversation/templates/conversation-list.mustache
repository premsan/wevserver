<!DOCTYPE html>
<html lang="en">
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section content">
            <form action="/conversation/conversation-list">
                <div class="field">
                    <label class="label">{{#t}}id-equals{{/t}}</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="idEquals"
                            placeholder="{{#t}}id-equals{{/t}}"
                        />
                    </div>
                </div>

                <div class="field">
                    <label class="label">{{#t}}name-starting-with{{/t}}</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="nameStartingWith"
                            placeholder="{{#t}}name-starting-with{{/t}}"
                        />
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <div class="select">
                            <select name="sortBy">
                                <option
                                    disabled="disabled"
                                    selected="selected"
                                    value="value"
                                >
                                    Sort By
                                </option>
                                <option value="UPDATED_AT_ASC">
                                    {{#t}}updated-at-asc{{/t}}
                                </option>
                                <option value="UPDATED_AT_DESC">
                                    {{#t}}updated-at-desc{{/t}}
                                </option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button">{{#t}}find{{/t}}</button>
                    </div>
                </div>
            </form>
        </section>
        <section class="section content">
            {{#conversationPage.content}}
            <div class="box">
                <div class="block">
                    <span class="tag">{{updatedAt}}</span>
                </div>
                <div class="block">
                    <a
                        class="button is-responsive is-dark"
                        href="/conversation/conversation-read/{{id}}"
                        >{{id}}</a
                    >
                </div>
                <div class="block">
                    <p>{{name}}</p>
                </div>
                <div class="block buttons">
                    {{#propertyPickRedirectUri}}
                    <a class="button" href="{{.}}">{{#t}}pick{{/t}}</a>
                    {{/propertyPickRedirectUri}}
                </div>
            </div>
            {{/conversationPage.content}}
        </section>
        <section class="section content">
            <nav
                class="pagination is-centered"
                role="navigation"
                aria-label="pagination"
            >
                <ul class="pagination-list">
                    <li>
                        <form action="/conversation-list">
                            <input type="hidden" name="id" />
                            <input type="hidden" name="name" />
                            <input type="hidden" name="page" />
                            <button
                                class="pagination-link"
                                aria-label="{{#t}}next-page{{/t}}"
                                type="submit"
                            >
                                {{#t}}next-page{{/t}}
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
