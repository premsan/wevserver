<!DOCTYPE html>
<html>
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section">
            <form method="post" action="/conversation/conversation-create">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" name="name"
                        {{#requestParams.name}} value="{{.}}"
                        {{/requestParams.name}} placeholder="Name" />
                    </div>

                    <ul>
                        {{#errorMessages.fieldErrors.name}}
                        <li class="help is-danger">{{.}}</li>
                        {{/errorMessages.fieldErrors.name}}
                    </ul>
                </div>

                <div>
                    <ul>
                        {{#errorMessages.globalErrors}}
                        <li class="help is-danger">{{.}}</li>
                        {{/errorMessages.globalErrors}}
                    </ul>
                </div>

                <div class="control">
                    <button type="submit" class="button is-primary">
                        Submit
                    </button>
                </div>
            </form>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
