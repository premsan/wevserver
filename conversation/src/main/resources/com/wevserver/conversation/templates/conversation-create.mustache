<!DOCTYPE html>
<html>
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section">
            <form method="post" action="/conversation/conversation-create">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="name"
                            value="{{#requestParams.name}}{{requestParams.name}}{{/requestParams.name}}"
                            placeholder="Name"
                        />
                    </div>

                    <ul>
                        {{#errorMessages.fieldErrors}} {{#name}}
                        <li class="help is-danger">{{.}}</li>
                        {{/name}} {{/errorMessages.fieldErrors}}
                    </ul>
                </div>

                <ul>
                    {{#errorMessages}} {{#globalErrors}}
                    <li class="help is-danger">{{.}}</li>
                    {{/globalErrors}} {{/errorMessages}}
                </ul>

                <div class="control">
                    <button type="submit" class="button is-primary">
                        Submit
                    </button>
                </div>
            </form>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
