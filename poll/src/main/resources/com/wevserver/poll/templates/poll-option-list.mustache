<!DOCTYPE html>
<html lang="en">
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section">
            <a class="block button is-dark" href="/poll/poll-read/{{poll.id}}">
                <span class="icon is-small">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span>Poll</span>
            </a>
            <a
                class="block button is-dark"
                href="/poll/poll-option-create?pollId={{poll.id}}"
            >
                <span class="icon">
                    <i class="fa-solid fa-plus"></i>
                </span>
                <span>Poll Option Create</span>
            </a>
        </section>
        <section class="section">
            {{#pollOptions}}
            <div class="box">
                <div class="block tags">
                    <span class="tag">{{id}}</span>
                </div>
                <div class="block">
                    <h4 class="title is-5">{{name}}</h4>
                </div>
                <div class="block">
                    <a
                        class="button is-dark"
                        href="/poll/poll-option-delete/{{id}}"
                        >{{#t}}delete{{/t}}</a
                    >
                </div>
            </div>
            {{/pollOptions}}
        </section>
        {{>com/wevserver/ui/templates/pagination-partial}}
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
