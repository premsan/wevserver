<!DOCTYPE html>
<html lang="en">
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section content">
            <h2 class="title is-2">Query</h2>
            <form class="box" action="/poll/poll-list">
                <div class="field">
                    <label class="label">{{#t}}id{{/t}}</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="id"
                            placeholder="{{#t}}id{{/t}}"
                        />
                    </div>
                </div>

                <div class="field">
                    <label class="label">{{#t}}name{{/t}}</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            name="name"
                            placeholder="{{#t}}name{{/t}}"
                        />
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <div class="select">
                            <select name="sortBy">
                                <option
                                    disabled="disabled"
                                    selected="selected"
                                    value="value"
                                >
                                    Sort By
                                </option>
                                <option value="UPDATED_AT_ASC">
                                    {{#t}}updated-at-asc{{/t}}
                                </option>
                                <option value="UPDATED_AT_DESC">
                                    {{#t}}updated-at-desc{{/t}}
                                </option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button">{{#t}}find{{/t}}</button>
                    </div>
                </div>
            </form>
        </section>
        <section class="section content">
            <h2 class="title is-2">Content</h2>
            {{#pollPage.content}}
            <div class="box">
                <div class="block">
                    <span class="tag">{{updatedAt}}</span>
                </div>
                <div class="block">
                    <a
                        class="button is-responsive is-dark"
                        href="/conversation/conversation-read/{{id}}"
                        >{{id}}</a
                    >
                </div>
                <div class="block">
                    <p>{{name}}</p>
                </div>
                <div class="block buttons">
                    {{#propertyPickRedirectUri}}
                    <a class="button" href="{{.}}">{{#t}}pick{{/t}}</a>
                    {{/propertyPickRedirectUri}}
                </div>
            </div>
            {{/pollPage.content}}
        </section>
        {{>com/wevserver/ui/templates/pagination-partial}}
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
