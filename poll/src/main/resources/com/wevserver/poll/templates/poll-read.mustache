<!DOCTYPE html>
<html lang="en">
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section">
            <a class="block button is-dark" href="/poll/poll-list">
                <span class="icon is-small">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span>Poll List</span>
            </a>
        </section>
        <section class="section content">
            <dl>
                <div class="block">
                    <dt class="label">{{#t}}id{{/t}}</dt>
                    <dd>{{poll.id}}</dd>
                </div>
                <div class="block">
                    <dt class="label">{{#t}}version{{/t}}</dt>
                    <dd>{{poll.version}}</dd>
                </div>
                <div class="block">
                    <dt class="label">{{#t}}name{{/t}}</dt>
                    <dd>{{poll.name}}</dd>
                </div>
                <div class="block">
                    <dt class="label">{{#t}}updated-at{{/t}}</dt>
                    <dd>{{poll.updatedAt}}</dd>
                </div>
                <div class="block">
                    <dt class="label">{{#t}}updated-by{{/t}}</dt>
                    <dd>{{poll.updatedBy}}</dd>
                </div>
            </dl>
        </section>
        <section class="section">
            <h2 class="title is-2">{{#t}}Actions{{/t}}</h2>
            <div class="block buttons">
                <a
                    class="button is-dark"
                    href="/poll/poll-option-list?pollId={{id}}"
                    >Options
                </a>
                <a class="button is-dark" href="/poll/poll-vote-view/{{id}}"
                    >Vote
                </a>
                <a class="button is-dark" href="/poll/poll-summary-view/{{id}}"
                    >Summary
                </a>
            </div>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
