        <section class="section">
            <form
                method="post"
                action="/broadcast/connection-update"
            >
                <div class="field">
                    <label class="label">Open</label>
                    <input
                        type="checkbox"
                        name="open"
                        {{#broadcastConnectionUpdate.open}}
