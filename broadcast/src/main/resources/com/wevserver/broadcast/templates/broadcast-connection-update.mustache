                        {{/broadcastConnectionUpdate.open}}
                    />
                </div>

                <div class="control">
                    <button type="submit" class="button is-primary">
                        Submit
                    </button>
                </div>
            </form>
        </section>
    </body>
    {{>com/wevserver/broadcast/templates/footer-fragment}}
