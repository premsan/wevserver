<!DOCTYPE html>
<html>
    {{>com/wevserver/ui/templates/head-partial}}
    {{>com/wevserver/ui/templates/header-partial}}
    <body>
        <section class="section">
            <form method="post" action="/mail/gmail-create">
                <div class="field">
                    <label class="label">To</label>
                    <div class="control">
                        <input class="input" type="text" name="to" {{#to}}
                        value="{{.}}" {{/to}} placeholder="To" />
                    </div>

                    <ul>
                        {{#fieldErrors.to}}
                        <li class="help is-danger">{{.}}</li>
                        {{/fieldErrors.to}}
                    </ul>
                </div>

                <div class="field">
                    <label class="label">Subject</label>
                    <div class="control">
                        <input class="input" type="text" name="subject"
                        {{#subject}} value="{{.}}" {{/subject}}
                        placeholder="Subject" />
                    </div>
                    <ul>
                        {{#fieldErrors.subject}}
                        <li class="help is-danger">{{.}}</li>
                        {{/fieldErrors.subject}}
                    </ul>
                </div>

                <div class="field">
                    <label class="label">Content</label>
                    <div class="control">
                        <textarea
                            class="textarea"
                            placeholder="content"
                            name="content"
                            rows="10"
                        >
 {{#content}} value="{{.}}" {{/content}}</textarea
                        >
                    </div>
                    <ul>
                        <ul>
                            {{#fieldErrors.content}}
                            <li class="help is-danger">{{.}}</li>
                            {{/fieldErrors.content}}
                        </ul>
                    </ul>
                </div>
                <div>
                    <ul>
                        {{#globalErrors}}
                        <li class="help is-danger">{{.}}</li>
                        {{/globalErrors}}
                    </ul>
                </div>

                <div class="control buttons">
                    <button type="submit" class="button is-dark">Submit</button>
                </div>
            </form>
        </section>
    </body>
    {{>com/wevserver/ui/templates/footer-partial}}
</html>
